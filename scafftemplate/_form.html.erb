<%= form_with(model: product, class: "contents text-white ") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul class="list-disc ml-6">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Enter product name", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": product.errors[:name].none?, "border-red-400 focus:outline-red-600": product.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :price %>
    <%= form.text_field :price, placeholder: "Enter price", class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full bg-gray-700", {"border-gray-600 focus:outline-blue-600": product.errors[:price].none?, "border-red-400 focus:outline-red-600": product.errors[:price].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :category %>
    <%= form.select :category, Product.categories.keys.map { |category| [category.titleize, category] }, { prompt: "Select category" }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full bg-gray-700", {"border-gray-600 focus:outline-blue-600": product.errors[:category].none?, "border-red-400 focus:outline-red-600": product.errors[:category].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :product_type %>
    <%= form.number_field :product_type, placeholder: "Enter product type", class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full bg-gray-700", {"border-gray-600 focus:outline-blue-600": product.errors[:type].none?, "border-red-400 focus:outline-red-600": product.errors[:type].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
